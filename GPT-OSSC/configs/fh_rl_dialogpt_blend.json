{
  "model": {
    "base_model_name": "microsoft/DialoGPT-medium",
    "fh_rank": 48,
    "fh_alpha": 0.2,
    "fh_beta": 0.05,
    "fh_gamma": 0.2,
    "noise_std": 0.0001,
    "detach_feedback": false
  },
  "training": {
    "blend_config": "configs/data_blend.json",
    "seq_len": 256,
    "batch_size": 1,
    "grad_accum": 4,
    "lr": 2e-05,
    "weight_decay": 0.01,
    "beta1": 0.9,
    "beta2": 0.95,
    "warmup_steps": 0,
    "max_steps": 6000,
    "eval_interval": 250,
    "log_interval": 50,
    "gamma_target": 0.2,
    "gamma_warmup_steps": 0,
    "output_dir": "runs/fh_rl_dialogpt_blend"
  },
  "ood_eval": {
    "corpus_path": "data/ptb_val.jsonl",
    "seq_len": 256,
    "batch_size": 4
  }
}