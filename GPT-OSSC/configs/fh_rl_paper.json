{
  "model": {
    "vocab_size": 256,
    "hidden_size": 192,
    "num_layers": 3,
    "num_heads": 3,
    "mlp_hidden_size": 768,
    "dropout": 0.1,
    "fh_rank": 32,
    "fh_alpha": 0.2,
    "fh_beta": 0.1,
    "fh_gamma": 0.0,
    "noise_std": 1e-4,
    "detach_feedback": true
  },
  "training": {
    "seq_len": 128,
    "batch_size": 32,
    "lr": 0.0003,
    "beta1": 0.9,
    "beta2": 0.95,
    "weight_decay": 0.01,
    "max_steps": 400,
    "warmup_steps": 20,
    "eval_interval": 100,
    "log_interval": 10,
    "gamma_sweep": [0.0, 0.15],
    "corpus_path": "data/fh_rl_corpus.jsonl",
    "output_dir": "runs/fh_rl_paper"
  }
}
