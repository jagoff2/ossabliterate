{
  "model": {
    "vocab_size": 256,
    "hidden_size": 96,
    "num_layers": 2,
    "num_heads": 3,
    "mlp_hidden_size": 384,
    "dropout": 0.1,
    "fh_rank": 16,
    "fh_alpha": 0.2,
    "fh_beta": 0.1,
    "fh_gamma": 0.1,
    "noise_std": 1e-4,
    "detach_feedback": true
  },
  "training": {
    "seq_len": 128,
    "batch_size": 8,
    "lr": 3e-4,
    "beta1": 0.9,
    "beta2": 0.95,
    "weight_decay": 0.01,
    "max_steps": 10,
    "warmup_steps": 0,
    "eval_interval": 5,
    "log_interval": 1,
    "gamma_sweep": [0.1],
    "corpus_path": "data/fh_rl_corpus.jsonl",
    "output_dir": "runs/fh_rl_smoke"
  }
}
